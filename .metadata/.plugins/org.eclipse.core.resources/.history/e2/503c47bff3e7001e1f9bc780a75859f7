	@Test
	@DisplayName("jdbc테스트")
	void jdbcTest() {
		SqlRowSet rs = jdbcTemplate
				.queryForRowSet("select * from member where id = ?" , 1);
		rs.next();
		assertEquals(1, rs.getInt("id"));
	}
	
